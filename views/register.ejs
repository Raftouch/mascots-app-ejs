<div class="flex flex-col gap-5 items-center pt-32">
    <h1>Create Account</h1>
    <%- include("./partials/messages.ejs") %>
    <form class="flex flex-col gap-5 justify-start" action="/register" method="POST">
        <div class="flex justify-between gap-5">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" required />
        </div>
        <div class="flex justify-between gap-5">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required />
        </div>
        <div class="flex justify-between gap-5">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />
        </div>
        <button class="px-4 py-2 bg-slate-900 text-slate-100" type="submit">Register</button>
    </form>
    <div class="flex items-center gap-8">
        <p>I have account already</p>
        <a class="px-4 py-2 bg-slate-100 text-slate-900 border border-slate-900" href="/login">Login</a>
    </div> 
</div>