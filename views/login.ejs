<div class="flex flex-col gap-5 items-center pt-32">
    <h1>Login</h1>
    <%- include("./partials/messages.ejs") %>
    <form class="flex flex-col gap-5 justify-start" action="/login" method="POST">
        <div class="flex justify-between gap-5">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required />
        </div>
        <div class="flex justify-between gap-5">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />
        </div>
        <button class="px-4 py-2 bg-slate-900 text-slate-100" type="submit">Login</button>
    </form>
    <div class="flex items-center gap-12">
        <p>No account yet?</p>
        <a class="px-4 py-2 bg-slate-100 text-slate-900 border border-slate-900" href="/register">Register</a>
    </div> 
</div>